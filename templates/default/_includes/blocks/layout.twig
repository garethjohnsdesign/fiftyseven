{% for matrixBlock in entry.layout.all() %}
{% switch matrixBlock.type %}

    {% case "copy" %}    
    {% if matrixBlock.position == 'full' %}
    <div class="grid-x grid-padding-x grid-padding-y">
      <div class="small-12 cell">

        <div class="grid-container">
            <div class="grid-x">
              <div class="small-12 cell">
        
                {{ matrixBlock.copy | markdown }}
        
              </div>
            </div>
        </div>

      </div>
    </div>
    {% elseif matrixBlock.position in ['left', 'right', 'center'] %}
    <div class="grid-x grid-padding-x grid-padding-y">
      <div class="small-12 cell">
  
        <div class="grid-container">
          <div class="grid-x align-{{ matrixBlock.position }}">
            <div class="small-12 medium-8 cell text-{{ matrixBlock.position }}">
              {{ matrixBlock.copy | markdown }}
            </div>
          </div>
        </div>

      </div>
    </div>
    {% endif %}
    
    {% case "image" %}
    {% if matrixBlock.position == 'full' %}
    <div class="grid-x grid-padding-x grid-padding-y align-center">
      <div class="small-12 {% if matrixBlock.aspectRatio.label | kebab == 'portrait' %}medium-6{% endif %} cell">
      {% set image = matrixBlock.image.one() %}
      <div class="image--{{ matrixBlock.aspectRatio.label | kebab }}" 
        {% if matrixBlock.aspectRatio.label | kebab == 'portrait' %}data-interchange="{% include "default/_includes/images/contained/5-7/interchange-img-small-12-medium-6" %}"
        {% elseif matrixBlock.aspectRatio.label | kebab == 'default' %}data-interchange="{% include "default/_includes/images/contained/7-5/interchange-img-small-12-medium-12" %}"
        {% elseif matrixBlock.aspectRatio.label | kebab == 'square' %}data-interchange="{% include "default/_includes/images/contained/1-1/interchange-img-small-12-medium-12" %}"
        {% elseif matrixBlock.aspectRatio.label | kebab == 'panorama' %}data-interchange="{% include "default/_includes/images/contained/16-9/interchange-img-small-12-medium-12" %}"
        {% else %}data-interchange="{% include "default/_includes/images/contained/5-7/interchange-img-small-12-medium-6" %}"
        {% endif %}>
      </div>
       {% if matrixBlock.caption %}<div class="caption">{{ matrixBlock.caption }}</div>{% endif %}
      </div>
    </div>
    {% elseif matrixBlock.position in ['left', 'right', 'center'] %}
    <div class="grid-x grid-padding-y align-{{ matrixBlock.position }}">
      <div class="small-12 {% if matrixBlock.aspectRatio.label | kebab == 'portrait' %}medium-6{% else %}large-6{% endif %} cell">
      {% set image = matrixBlock.image.one() %}
      <div class="image--{{ matrixBlock.aspectRatio.label | kebab }}" 
        {% if matrixBlock.aspectRatio.label | kebab == 'portrait' %}data-interchange="{% include "default/_includes/images/contained/5-7/interchange-img-small-12-medium-6" %}"
        {% elseif matrixBlock.aspectRatio.label | kebab == 'default' %}data-interchange="{% include "default/_includes/images/contained/7-5/interchange-img-small-12-medium-12" %}"
        {% elseif matrixBlock.aspectRatio.label | kebab == 'square' %}data-interchange="{% include "default/_includes/images/contained/1-1/interchange-img-small-12-medium-12" %}"
        {% elseif matrixBlock.aspectRatio.label | kebab == 'panorama' %}data-interchange="{% include "default/_includes/images/contained/16-9/interchange-img-small-12-medium-12" %}"
        {% else %}data-interchange="{% include "default/_includes/images/contained/5-7/interchange-img-small-12-medium-6" %}"
        {% endif %}>
      </div>
      {% if matrixBlock.caption %}<div class="caption">{{ matrixBlock.caption }}</div>{% endif %}
      </div>
    </div>
    {% endif %}
    
    
    {% case "images" %}
    {% if matrixBlock.position == 'left' %}
    <div class="grid-x grid-padding-y grid-margin-y align-center">
      <div class="small-12 medium-5 cell align-self-middle">
        
        <div class="grid-x grid-padding-y align-center">
          <div class="small-12 medium-10 cell align-self-middle">
            {% set image = matrixBlock.images[0] %}
            <div class="image--portrait" {% if image %}data-interchange="{% include "default/_includes/images/contained/5-7/interchange-img-small-12-medium-12" %}"{% endif %}></div>
            {% if image.caption %}<div class="caption">{{image.caption}}</div>{% endif %}
          </div>
        </div>
              
      </div>
      
      <div class="small-12 medium-5 cell align-self-middle">
        
        <div class="grid-x grid-padding-y align-center">
          <div class="small-12 medium-8 cell align-self-middle">
            {% set image = matrixBlock.images[1] %}
            <div class="image--portrait" {% if image %}data-interchange="{% include "default/_includes/images/contained/5-7/interchange-img-small-12-medium-12" %}"{% endif %}></div>
            {% if image.caption %}<div class="caption">{{image.caption}}</div>{% endif %}
          </div>
        </div>   
        
      </div>
    </div>
    {% elseif matrixBlock.position == 'center' %}
    <div class="grid-x grid-padding-x grid-padding-y grid-margin-y align-center">
      <div class="small-12 medium-5 cell align-self-middle">
        
        <div class="grid-x grid-padding-y align-center">
          <div class="small-12 medium-12 cell align-self-middle">
            {% set image = matrixBlock.images[0] %}
            <div class="image--portrait" {% if image %}data-interchange="{% include "default/_includes/images/contained/5-7/interchange-img-small-12-medium-12" %}"{% endif %}></div>
            {% if image.caption %}<div class="caption">{{image.caption}}</div>{% endif %}
          </div>
        </div>
              
      </div>
      
      <div class="small-12 medium-5 cell align-self-middle">
        
        <div class="grid-x grid-padding-y align-center">
          <div class="small-12 medium-12 cell align-self-middle">
            {% set image = matrixBlock.images[1] %}
            <div class="image--portrait" {% if image %}data-interchange="{% include "default/_includes/images/contained/5-7/interchange-img-small-12-medium-12" %}"{% endif %}></div>
            {% if image.caption %}<div class="caption">{{image.caption}}</div>{% endif %}
          </div>
        </div>   
        
      </div>
    </div>
    {% elseif matrixBlock.position == 'right' %}
    <div class="grid-x grid-padding-y grid-margin-y align-center">
      <div class="small-12 medium-5 cell align-self-middle">
        
        <div class="grid-x grid-padding-y align-center" data-aos="fade-in">
          <div class="small-12 medium-8 cell align-self-middle">
            {% set image = matrixBlock.images[0] %}
            <div class="image--portrait" {% if image %}data-interchange="{% include "default/_includes/images/contained/5-7/interchange-img-small-12-medium-12" %}"{% endif %}></div>
            {% if image.caption %}<div class="caption">{{image.caption}}</div>{% endif %}
          </div>
        </div>
              
      </div>
      
      <div class="small-12 medium-5 cell align-self-middle">
        
        <div class="grid-x grid-padding-y align-center">
          <div class="small-12 medium-10 cell align-self-middle">
            {% set image = matrixBlock.images[1] %}
            <div class="image--portrait" {% if image %}data-interchange="{% include "default/_includes/images/contained/5-7/interchange-img-small-12-medium-12" %}"{% endif %}></div>
            {% if image.caption %}<div class="caption">{{image.caption}}</div>{% endif %}
          </div>
        </div>   
        
      </div>
    </div>
    {% endif %}
  
    

    
{% endswitch %}
{% endfor %}