{% set bodyClass = 'about' %}

{% extends "default/_layouts/site" %}

{% block main %}

{% if entry.tradersIcons %}
<div class="grid-container">
<div class="grid-x grid-padding-y grid-padding-x align-center padding-vertical-2">
  <div class="small-12 medium-4 cell text-center">
      <h4 class="sans-display text-uppercase">Open Air Seating</h4>
      <svg class="icon icon-covid-large icon-seating"><use xlink:href="/assets/icons/symbol-defs.{{staticAssetsVersion}}.svg#icon-seating"></use></svg>
  </div>
  <div class="small-12 medium-4 cell text-center">
    <h4 class="sans-display text-uppercase">Outdoor Stage</h4>
    <svg class="icon icon-covid-large icon-seating"><use xlink:href="/assets/icons/symbol-defs.{{staticAssetsVersion}}.svg#icon-outdoor-stage"></use></svg>
  </div>
  <div class="small-12 medium-4 cell text-center">
    <h4 class="sans-display text-uppercase">Street Food</h4>
    <svg class="icon icon-covid-large icon-seating"><use xlink:href="/assets/icons/symbol-defs.{{staticAssetsVersion}}.svg#icon-street-food"></use></svg>
  </div>
</div>
</div>
{% else %}
<div class="grid-container">
  <div class="grid-x grid-padding-y grid-padding-x align-center padding-vertical-2">
    <div class="small-12 medium-4 cell text-center">
        <h4 class="sans-display text-uppercase">Social Distancing</h4>
        <svg class="icon icon-covid icon-social-distancing"><use xlink:href="/assets/icons/symbol-defs.{{staticAssetsVersion}}.svg#icon-social-distancing"></use></svg>
    </div>
    <div class="small-12 medium-4 cell text-center">
        <h4 class="sans-display text-uppercase">Big Screens</h4>
        <svg class="icon icon-covid icon-big-screen"><use xlink:href="/assets/icons/symbol-defs.{{staticAssetsVersion}}.svg#icon-big-screen"></use></svg>

    </div>
    <div class="small-12 medium-4 cell text-center">
        <h4 class="sans-display text-uppercase">Drinks Delivery</h4>
        <svg class="icon icon-covid icon-pint"><use xlink:href="/assets/icons/symbol-defs.{{staticAssetsVersion}}.svg#icon-pint"></use></svg>
    </div>
  </div>
  </div>
{% endif %}

<!-- Layout -->
{% include "default/_includes/blocks/layout" %}    
<!-- End Layout -->

<!-- Images -->
<div class="grid-container">
  <div class="grid-x grid-padding-x grid-padding-y small-up-2 medium-up-3">
  {% for image in entry.images.all() %} 
    <div class="cell">
    <div class="margin-bottom-1 image--square" data-interchange="{% include "default/_includes/images/contained/1-1/interchange-img-small-12-medium-4" %}"></div>
    </div>
  {% endfor %}
  </div>
</div>
<!-- End Images -->

{% endblock %}