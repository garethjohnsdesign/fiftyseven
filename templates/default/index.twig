{% set bodyClass = 'home' %}

{% extends "default/_layouts/site" %}

{% block loading %}
{#
<div class="grid-y align-center loader hide">
  <div class="shrink cell">
    <div class="grid-x grid-padding-x align-center">
      <div class="small-11 medium-6 cell h1">
        <svg class="icon icon-{{ event.logo }}"><use xlink:href="/assets/icons/symbol-defs.svg#icon-{{ event.logo }}"></use></svg>
      </div>
    </div>
  </div>
</div>
#}
{% endblock %}

{% block main %}

<!-- Headliners - Desktop -->
<div class="swiper-container show-for-large">

  <div class="swiper-wrapper">
    {% for block in entry.heroActs.order('RAND()').all() %}
    {% set act = block.act.one() %}
    {% set show = block.show.one() %}
    <div class="swiper-slide small-12 cell text-center">
      {% set image = act.image.one() %}
      <div class="image--panorama align-center-middle" data-interchange="{% include "_includes/images/contained/16-9/interchange-img-small-12-medium-12" %}">
        
        <div class="grid-y height-100 align-center content">
          <div class="shrink cell text-center">
          <a href="{{ show.url }}" class="white">
            <h1 class="sans-display text-uppercase">{{act.title}}</h1>
            <h3>{{block.quote|markdown}}</h3>
          </a>
          </div>
        </div>
  
      </div>
    </div>
    {% endfor %}
  </div>

  <div class="swiper-button-prev-test flex-container align-middle primary-color margin-left-1"></div>
  <div class="swiper-button-next-test flex-container align-middle align-right primary-color margin-right-1"></div>

</div>
<!-- End Headliners - Desktop -->

<!-- Copy -->
<div class="grid-container">
  <div class="grid-x grid-padding-x grid-padding-y padding-vertical-3 align-center align-middle">
    <div class="small-12 medium-10 large-9 cell text-center">
      {{entry.copy}}Test
    </div>
  </div>
</div>
<!-- End Copy -->

<!-- Acts -->
<div class="grid-container">

<div class="grid-x grid-padding-x grid-padding-y align-center">
{% for block in entry.featuredActs.all() %}
{% set act = block.act.one() %}
{% set show = block.show.one() %}
  <div class="{{ block.width.value }} cell text-center">
    <a href="{{ show.url }}">
      {% set image = act.image.one() %}
      <div class="image--landscape act--link" data-interchange="{% include "_includes/images/contained/1-1/interchange-img-small-12-medium-12" %}">

        <div class="content grid-y align-center act__title">
          <div class="shrink cell padding-1 h2 sans-display white">
            {{act.title}}
          </div>
        </div>

        <div class="content grid-y align-center act__hover">
          <div class="shrink cell padding-1 h2 sans-display white">
            <svg class="icon icon-eye"><use xlink:href="/assets/icons/symbol-defs.svg#icon-eye"></use></svg>
          </div>
        </div>


      </div>
    </a>
  </div>
{% endfor %}
</div>

<div class="grid-x grid-padding-x grid-padding-y padding-vertical-3 align-center align-middle">
  <div class="small-12 medium-10 large-9 cell text-center">
    <svg class="icon icon-view"><use xlink:href="/assets/icons/symbol-defs.svg#icon-view"></use></svg>
    <h3 class="text-low">View All</h3>
  </div>
</div>

</div>
<!-- End Acts -->

<!-- Traders -->
<div class="grid-container">
  <div class="grid-x grid-padding-x grid-padding-y">
  {% for trader in entry.traders.all() %}
    <div class="small-12 medium-4 large-4 cell">

      <a href="/food-and-drink">
        {% set image = trader.image.one() %}
        <div class="image--square acts" data-interchange="{% include "_includes/images/contained/1-1/interchange-img-small-12-medium-12" %}">
          
          <div class="content grid-y align-center text-center">
            <div class="shrink cell padding-1 h2 sans-display white">
            {{trader.title}}
            </div>
          </div>
        </div>
      </a>
      
    </div>
  {% endfor %}
  </div>
</div>
<!-- End Traders -->

{% endblock %}