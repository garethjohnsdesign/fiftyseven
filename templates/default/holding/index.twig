{% set bodyClass = 'holding' %}

{% extends "default/_layouts/base" %}

{% block body %}

{% block main %}

{% set image = holding.image.one() %}
<div class="grid-y align-center primary-background-colour viewheight" data-interchange="{% include "_includes/images/full/full/interchange-img-small-12-medium-12" %}">
  <div class="shrink cell">

      <div class="grid-x grid-padding-x grid-padding-y" data-aos="fade-in">
        <div class="small-12 cell text-center">
          <svg class="icon icon-{{ event.logo }} icon-holding"><use xlink:href="/assets/icons/symbol-defs.svg#icon-{{ event.logo }}"></use></svg>
        </div>
      </div>
      
      <div class="grid-x grid-padding-x grid-padding-y">
        <div class="cell text-center">
          <h4>{{ event.address }}</h4>
        </div>
      </div>
      
      <div class="grid-x grid-padding-x grid-padding-y align-center">
        <div class="small-11 medium-5 large-4 xlarge-4 xxlarge-3 cell text-center">
          <form action="{{ event.newsletter }}" method="post" target="_blank" data-abide novalidate>
           
            <div data-abide-error class="alert callout" style="display: none;">
              <p><i class="fi-alert"></i>There are some errors in your form.</p>
            </div> 

            <div class="input-group">
              <input class="input-group-field" type="email" name="EMAIL" placeholder="Subscribe to our newsletter">
              <div class="input-group-button">
              <input type="submit" class="button tertiary" value="Submit">
              </div>
            </div>
          </form>
          <a href="{{event.previousSite}}">View 2019 Site</a>
        </div>
      </div>
      
      <div class="grid-x align-center">
        <div class="shrink cell">
          <ul class="menu align-middle">
            {% for block in event.socials.all() %}
            {% switch block.type %}
            
              {% case "facebook" %}
                  <li><a href="{{block.socialLink}}" target="_blank"><svg class="icon icon-facebook"><use xlink:href="/assets/icons/symbol-defs.svg#icon-facebook"></use></svg></a></li>
              {% case "instagram" %}
                  <li><a href="{{block.socialLink}}" target="_blank"><svg class="icon icon-instagram"><use xlink:href="/assets/icons/symbol-defs.svg#icon-instagram"></use></svg></a></li>
              {% case "twitter" %}
                  <li><a href="{{block.socialLink}}" target="_blank"><svg class="icon icon-twitter"><use xlink:href="/assets/icons/symbol-defs.svg#icon-twitter"></use></svg></a></li>
              {% endswitch %}
            {% endfor %}
          </ul>
        </div>
      </div>
      
      
