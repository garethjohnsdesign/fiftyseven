{% set bodyClass = 'shows' %}

{% extends "_layouts/site" %}

{% block main %}

{% set showsQuery = craft.entries().section('shows')%}
{% set shows = showsQuery.all() %}

<div class="grid-x">
{% for show in shows %}
  {% for acts in show %}
    {% for act in acts %}
    <div class="small-12 medium-6 large-4 xlarge-3 cell text-center">
      {% set image = act.image.one() %}
      <div class="image--square" data-interchange="{% include "_includes/images/contained/1-1/interchange-img-small-12-medium-12" %}">
        <div class="content grid-y align-center">
          <div class="shrink cell padding-1 h2 sans-display white">
          {{act.title}}
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  {% endfor %}
{% endfor %}
</div>

{% endblock %}